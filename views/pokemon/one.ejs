<div>
  <h2><%- pokemon.name %></h2>
  <img src="<%- pokemon.img %> " alt="" />
  <p><%- pokemon.type %></p>
  <p><%- pokemon.ability %></p>
  <p>Created by: <%- pokemon.user_id.username %></p>
  <% if (user) { %> <% if (user.id == pokemon.user_id._id) { %>
  <a href="/pokemon/update/<%= pokemon._id %>">Update</a>
  <form method="POST" action="/pokemon/delete/<%= pokemon._id %>">
    <button type="submit">Delete</button>
  </form>
  <% } %> <% } %>
</div>
