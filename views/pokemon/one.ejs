<div class="pokemon-card shadow p-3 mb-5 bg-body rounded d-flex flex-row">
  <img width="250px" height="250px" src="<%= pokemon.img %> " alt="" class="me-5" />
  <div class="pokemon-card-info">
    <h2><%- pokemon.name %></h2>
    <p>Type: <%- pokemon.type %></p>
    <p>Ability: <%- pokemon.ability %></p>
    <p>Created by: <%- pokemon.user_id.username %></p>

    <% if (user) { %> <% if (user.id == pokemon.user_id._id) { %>

    <div class="pokemon-card-buttons">
      <a class="btn btn-success btn-sm me-3" href="/pokemon/update/<%= pokemon._id %>">Update</a>
      <form method="POST" action="/pokemon/delete/<%= pokemon._id %>">
        <button class="btn btn-danger btn-sm" type="submit">Delete</button>
      </form>
    </div>
    <% } %> <% } %>
  </div>
</div>

<h2>Comments</h2>

<form action="/pokemon/<%= pokemon._id %>" method="POST">
  <textarea class="form-control" name="content" placeholder="Comment"></textarea>
  <div class="text-right">
    <button type="submit" class="btn btn-primary save-button">Save</button>
  </div>
</form>

<div class="comment-card">
  <ul>
    <% pokemon.comments.forEach((comment) => { %>

    <div class="shadow p-1 mb-2 bg-body rounded d-flex flex-column comment-item">
      <li class="shadow p-3 mb-2 bg-body rounded comment-content bg-info-subtle text-emphasis-info">
        <%- comment.content %>
      </li>
      <li class="li-comment">By: <%- comment.user_id.username%></li>
      <li class="li-comment">On: <%- comment.date %></li>
    </div>
    <% }); %>
  </ul>
</div>
